{% extends "base.jinja" %}

{% block content%}

<form action="" method="POST" novalidate>

    <h2>Sign In Page</h2>
    {{ form.hidden_tag() }}
    <p>
        {{ form.username.label }}<br>
        {{ form.username(size=32) }}
    </p>
    <p>
        {{ form.password.label }}<br>
        {{ form.password(size=32) }}
        {% for error in form.password.errors %}
            <span class="err-msg">{{ error }}</span>
        {% endfor %}
    </p>
    <p>{{ form.submit() }}</p>

</form>

{% endblock %}